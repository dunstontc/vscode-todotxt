{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "todo",
	"patterns": [
		{
			"include": "#dates"
    },
		{
			"include": "#variables"
    },
    {
			"include": "#strings"
		}
	],
	"repository": {
    "dates": {
			"patterns": [
				{
					"name": "constant.numeric.date.todo",
					"match": "([0-9]{4}-[0-9]{2}-[0-9]{2})"
				}
			]
    },
    "variables": {
			"patterns": [
				{
					"name": "variable.context.todo",
					"match": "(?:\b\+)([a-zA-Z0])"
				},
        {
          "name": "variable.project.todo",
          "match": "(?:\b@)([a-zA-Z0])"
        },
        {
          "name": "variable.misc.todo",
          "match": "(TODO)"
        }
			]
    },
		"strings": {
			"name": "string.quoted.double.todo",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.todo",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "todo"
}
